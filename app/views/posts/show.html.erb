<!-- Show Post -->

<div class="col-lg-12">
  <ul class="list-inline">
    <li><h2><%= @post.title %></h2></li>
    <li>
      <h4>
        <a href="http://<%= @post.urllink %>"><%= @post.urllink %></a>
      </h4>
    </li>
  </ul>  
  <%= markdown @post.body %>
  <p>Posted by <%= @post.user.username unless @post.user.nil? %> on <%= @post.created_at.strftime("%D") %></p>
  <hr>

  <h4>Comments</h4>
  <%= render 'comments/form' %>
  <div class="row">
    <div class="col-lg-12">
      <%= nested_comments @comments.arrange(:order => :created_at) %>
    </div>  
  </div>
</div>