<!-- Post partial -->

<div class="post">
  <ul class="list-inline">
    <li><%= link_to post.title, post, class: "text-info" %></li>
    <li class="post-link">(<%= post.urllink %>)</li>
  </ul>

  <ul class="list-inline post-info">
    <li><%= render partial: "votes/voter", locals: { post: post } %></li>
    <li>By <%= post.user.username unless post.user.nil? %> on <%= post.created_at.strftime("%D") %></li>
    <li>Comments (<%= post.comments.count %>)</li>
    <li id="post-<%= post.id %>-points"><%= post.points %> <%="point".pluralize(post.points) %></li>
  </ul>

</div>