<div class="col-lg-4 col-lg-offset-4">
  <h2>Sign up</h2>
  
  <div  class='form-group'>
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div><%= f.text_field :username, :autofocus => true, :class => "form-control", :placeholder => "Username" %><br></div>

      <div><%= f.email_field :email, :class => "form-control", :placeholder => "Email Address" %><br></div>

      <div><%= f.password_field :password, :class => "form-control", :placeholder => "Password" %><br></div>

      <div><%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "Confirm Password" %></div> <br />

      <div><%= f.submit "Sign up", :class => "btn btn-primary" %></div>
    <% end %>
  </div>

  <hr>

  <a href="/users/auth/twitter">
    <button class="btn btn-info">
      <i class="fa fa-twitter"></i> | Sign up with Twitter
    </button>
  </a>

  <br>

  <%= render "devise/shared/links" %>
</div>